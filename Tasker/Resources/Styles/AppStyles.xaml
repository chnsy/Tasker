<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colors -->
    <Color x:Key="DarkBlue">#212b4f</Color>
    <Color x:Key="LightBlue">#8a8ba6</Color>
    <Color x:Key="White">#ffffff</Color>
    <Color x:Key="PageBackground">#F4F6FB</Color>
    <Color x:Key="CardBackground">#212b4f</Color>
    <Color x:Key="ChipBackground">#E8EAF6</Color>
    <Color x:Key="ProgressTrack">#2D3480</Color>

    <!-- Label Styles -->
    <Style Class="DarkBlue" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}"/>
    </Style>
    <Style Class="LightBlue" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource LightBlue}"/>
    </Style>
    <Style Class="White" TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource White}"/>
    </Style>
    <Style Class="Header" TargetType="Label">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="Title"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>
    <Style Class="SubHeader" TargetType="Label">
        <Setter Property="FontSize" Value="Medium"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>
    <Style Class="CardTitle" TargetType="Label">
        <Setter Property="FontSize" Value="Medium"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>
    <Style Class="SectionLabel" TargetType="Label">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="CharacterSpacing" Value="2"/>
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}"/>
        <Setter Property="Margin" Value="0,15,0,10"/>
    </Style>
    <Style Class="FieldLabel" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}"/>
        <Setter Property="CharacterSpacing" Value="0.5"/>
    </Style>

    <!-- Shadow -->
    <Shadow x:Key="shadow"
            Brush="#cfd0d4"
            Opacity="0.6"
            Radius="15"
            Offset="10,15"/>

    <!-- RoundRectangle  -->
    <Style TargetType="RoundRectangle">
        <Setter Property="CornerRadius" Value="18"/>
        <Setter Property="Fill" Value="{StaticResource DarkBlue}"/>
        <Setter Property="WidthRequest" Value="155"/>
        <Setter Property="Shadow" Value="{StaticResource shadow}"/>
    </Style>

    <!-- Task Entry -->
    <Style x:Key="Task" TargetType="Entry">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource LightBlue}"/>
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <!-- Task card   -->
    <Style x:Key="TaskCard" TargetType="Frame">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="BackgroundColor" Value="{StaticResource White}"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="Padding" Value="16,14"/>
        <Setter Property="HasShadow" Value="False"/>
        <Setter Property="Shadow" Value="{StaticResource shadow}"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- Category chip  -->
    <Style x:Key="CategoryChip" TargetType="Frame">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="Padding" Value="10,10"/>
        <Setter Property="HasShadow" Value="False"/>
        <Setter Property="BorderColor" Value="Transparent"/>
        <Setter Property="BackgroundColor" Value="{StaticResource ChipBackground}"/>
    </Style>

    <!-- Primary button -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="HeightRequest" Value="56"/>
        <Setter Property="BackgroundColor" Value="{StaticResource DarkBlue}"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontAttributes" Value="Bold"/>
    </Style>

    <!-- Secondary button -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="HeightRequest" Value="56"/>
        <Setter Property="BackgroundColor" Value="{StaticResource ChipBackground}"/>
        <Setter Property="TextColor" Value="{StaticResource DarkBlue}"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="BorderColor" Value="Transparent"/>
    </Style>

    <!-- FAB -->
    <EllipseGeometry x:Key="circle" Center="50,50" RadiusX="30" RadiusY="30"/>
    <Style x:Key="CircularButton" TargetType="Button">
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="FontSize" Value="50"/>
        <Setter Property="HeightRequest" Value="100"/>
        <Setter Property="WidthRequest" Value="100"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="BackgroundColor" Value="{StaticResource DarkBlue}"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="Clip" Value="{StaticResource circle}"/>
    </Style>

</ResourceDictionary>