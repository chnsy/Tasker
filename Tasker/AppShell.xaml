<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tasker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tasker"
    xmlns:views="clr-namespace:Tasker.MVVM.Views"
    Title="Tasker"
    Shell.NavBarIsVisible="False">


    <!-- Splash is the first page -->
    <ShellContent 
        Title="SplashAnimation"
        ContentTemplate="{DataTemplate views:SplashView}"
        Route="SplashView"/>

    <!-- Main page registered as a route -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainView}"
        Route="MainView" />
    

</Shell>
